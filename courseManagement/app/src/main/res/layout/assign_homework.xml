<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/assign_homework_top"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/assign_homework_button"
                android:background="#00000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:text="布置作业" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/assign_homework_centre"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_below="@id/assign_homework_top">
            <EditText
            android:id="@+id/assign_homework_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                android:textSize="18sp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:hint="title"
            android:inputType="text"
            android:maxLines="1"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/assign_homework_below"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_below="@id/assign_homework_centre">
            <EditText
                android:id="@+id/assign_homework_content"
                android:gravity="top"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/assignment_title"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:hint="assignment content"
                android:inputType="text"
                android:maxLines="1" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
