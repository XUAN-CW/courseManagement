<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/show_homework_back"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <Button
                android:id="@+id/show_homework_back_button"
                android:background="#00000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:text="返回" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/show_homework_back">
            <TextView
                android:id="@+id/show_homework_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:inputType="text"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/show_homework_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/show_homework_title"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:textColor="#000000"
                android:inputType="text"
                android:maxLines="1" />
        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>
